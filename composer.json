{
	"name": "dereuromark/cakephp-markup",
	"type": "cakephp-plugin",
	"description": "CakePHP plugin for markup (parsing and displaying)",
	"keywords": ["cakephp", "plugin", "markup", "highlighting"],
	"homepage": "https://github.com/dereuromark/cakephp-markup",
	"license": "MIT",
	"authors": [
		{
			"name": "Mark Scherer",
			"homepage": "https://www.dereuromark.de",
			"role": "Maintainer"
		}
	],
	"require": {
		"php": ">=5.6",
		"cakephp/cakephp": "^3.6"
	},
	"require-dev": {
		"fig-r/psr2r-sniffer": "^0.6"
	},
	"autoload": {
		"psr-4": {
			"Markup\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Markup\\Test\\": "tests/",
			"Cake\\Test\\": "vendor/cakephp/cakephp/tests/"
		}
	},
	"support": {
		"source": "https://github.com/dereuromark/cakephp-markup"
	},
	"scripts": {
		"phpstan": "phpstan analyse -c tests/phpstan.neon -l 5 src/",
		"phpstan-setup": "cp composer.json composer.backup && composer require --dev phpstan/phpstan:^0.12 && mv composer.backup composer.json",
		"test": "php phpunit.phar",
		"test-setup": "[ ! -f phpunit.phar ] && wget https://phar.phpunit.de/phpunit-6.5.13.phar && mv phpunit-6.5.13.phar phpunit.phar || true",
		"test-coverage": "php phpunit.phar --log-junit tmp/coverage/unitreport.xml --coverage-html tmp/coverage --coverage-clover tmp/coverage/coverage.xml",
		"cs-check": "phpcs -p --standard=vendor/fig-r/psr2r-sniffer/PSR2R/ruleset.xml --extensions=php src/ tests/",
		"cs-fix": "phpcbf -p --standard=vendor/fig-r/psr2r-sniffer/PSR2R/ruleset.xml --extensions=php src/ tests/"
	}
}
